<%= form_for @changeset , Routes.topic_path(@conn, :update, @topic), [method: :put] , fn f -> %>

  <div class="form-group">
    <%= text_input f, :title, placeholder: "Title", class: "form-control" %>
    <%= error_tag f, :title %>
  </div>  

  <%= submit "Submit", class: "btn btn-primary" %>
<% end %>